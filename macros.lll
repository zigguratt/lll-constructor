;;; ---------------------------------------------------------------------------
;;; Macros for the LLL constructor demonstration.

(seq

  ;; --------------------------------------------------------------------------
  ;; Constant definitions.

  ;; Memory.
  (def 'temp-data 0x00)
  (def 'code-body 0x20)

  ;; Storage.
  (def 'parameter 0x00)

  ;; Precomputed function ID.
  (def 'get-parameter 0x40f4f7b9)

  ;; --------------------------------------------------------------------------
  ;; Extract the four leftmost bytes of input.

  (def 'shift-right (input)
    (div input (exp 2 224)))

  ;; --------------------------------------------------------------------------
  ;; Determines whether the supplied function ID matches a known function hash.
  ;; The function ID is in the leftmost four bytes of the call data.

  (def 'function (function-hash code-body)
    (when (= (shift-right (calldataload 0x00)) function-hash)
      code-body))

  ;; --------------------------------------------------------------------------
  ;; Allows a more intuitive way to determine whether to run a given code body.

  (def 'function (hash code)
    (when (= function-id hash) code))

)
